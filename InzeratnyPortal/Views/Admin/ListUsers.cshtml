@model IList<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    Layout = "_adminLayout";
}

<h1>Users</h1>

@*<a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>*@

@if (Model.Any())
{

    foreach (var user in Model)
    {
<div class="card mt-3">
    <h5 class="card-header">ID: @user.Id</h5>
    <div class="card-body">
        <h5 class="card-title">Meno: @user.UserName</h5>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    </div>
    <div class="card-footer">
        <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
            <span id="cfm-del_@user.Id" class="hidden">
                <span>Are you sure you want to delete?</span>
                <button type="submit" class="btn btn-danger">Yes</button>
                <a href="#" class="btn btn-primary" onclick="confirmDelete('@user.Id', false)">No</a>
            </span>

            <span id="del_@user.Id">
                <a class="btn btn-danger text-white" onclick="confirmDelete('@user.Id', true)">Delete</a>
            </span>
        </form>

    </div>
</div>
    }



}
else
{


}
